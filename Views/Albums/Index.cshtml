@model IEnumerable<fanaticServe.Dto.ShowableAlbum>

@{
    ViewData["Title"] = "discography";
    String preTitle = "";
    var currentFilter = ViewData["CurrentFilter"] as string;
    var currentSort = ViewData["CurrentSort"] as string;
}

<h1>@ViewData["Title"] </h1>

<form asp-action="Index" method="get" class="mb-2">
    <input type="text" name="searchString" value="@currentFilter" placeholder="タイトルで検索" />
    <input type="hidden" name="sortOrder" value="@currentSort" />
    <button type="submit">検索</button>
    @if (!string.IsNullOrEmpty(currentFilter))
    {
        <a asp-action="Index">クリア</a>
    }
</form>

<a asp-action="Index" asp-route-sortOrder="@ViewData["DateSort"]">発売日で並び替え</a> |
<a asp-action="Index" asp-route-sortOrder="@ViewData["TitleSort"]">タイトルで並び替え</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Release_on)
            </th>
            <th>
            </th>
            <th>
                タイトル
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Media)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Release_on)
                </td>
                <td>
                    @{
                        if(!preTitle.Equals(item.Title)){
                        <a asp-action="AlbumGroup" asp-route-id="@item.Abstract_album_id">
                        @Html.DisplayFor(modelItem => item.Title)
                        </a>
                        }
                        preTitle = item.Title;
                    }
                </td>
                <td>
                    <a asp-action="Detail" asp-route-id="@item.Album_id">
                        @Html.DisplayFor(modelItem => item.DetailTitle)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Media)
                </td>
            </tr>;
        }
    </tbody>
</table>
